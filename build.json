{
  "paths": {
    "src": ["app.js", "app/**/*.js"],
    "test": ["test/**/*.spec.js"]
  },
  "nodemon": {
    "script": "app.js",
    "ignore": ["*.json", ".editorconfig",
      ".eslintrc", ".gitignore", "gulpfile.js", "README.md", "tmp", "coverage"
    ],
    "delay": 3000,
    "verbose": true
  },
  "debug": {
    "debugPort": 5858,
    "webHost": "localhost",
    "webPort": 9090
  },
  "eslint": {
    "failOnError": true
  }
}
